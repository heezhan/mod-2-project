

<div id="push"></div>
<header class="header navbar-fixed-top">
    <div class="container">
        <nav class="ui secondary  menu">
            <%= link_to "Home page", home_path, class: "item"%> 
            <%= link_to "Write a review", new_review_path, class: "item" %>
            <% if current_user %>
                <%= link_to "Your profile", user_path(current_user), class: "item" %>
                <% else %>
                <%= link_to "Login", login_path, class: "item" %>
            <% end %>
             
            <div class="right menu">
                <a class="ui item">
                    <% if current_user %>
                  <%= link_to "Log Out", logout_path, class: "item" %>
                  <% else %>
                  <%= link_to "Create new user", new_user_path, class: "item" %>
                    <% end %>
                </a>
              </div>
        </nav>
    </div>
</header>