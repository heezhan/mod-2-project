
<div class="userform">

<%= form_for @review do |f| %>
<h1>
<div class="form-group">
<%= f.label :content %>
<%= f.text_area :content, class: "form-control" %>
</div>

<div class="form-group">
<%= f.label :stars %>
<%= f.number_field :stars, class: "form-control" %>
</div>

<div class="form-group">
<%= f.label :restaurants %><br>
<%= f.collection_select :restaurant_id, Restaurant.all, :id, :name, class: "form-control" %>
</div>

<button type="submit" class="btn btn-primary">Submit</button>

<% end %>
</h1>
</div>