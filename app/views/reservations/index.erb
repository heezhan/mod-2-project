<h1> Your reservations: 
   <%= button_to "Create Reservation", new_reservation_path, :method => "get" %>  </h1> 

<% @reservations.each do |reservation| %>
<div class="container">
<div class="card">
        <div class="card-body">
                <h1 class="card-title"> <%= reservation.restaurant.name %> </h1>
                <h3>Number of guests: <%= reservation.guests %></h3>
               <h3>Date: <%= reservation.date %></h3>
               <h3>Time: <%= reservation.time %></h3>
               <%= button_to "Delete Reservation", {:controller => :reservations,
                :action => 'destroy', :id => reservation.id }, :method => :delete %>
        </div>
    </div>
</div>
<% end %>